<layout version="1.0.2">

    <default>
        <reference name="head">
            <action method="addJs">
                <script>maxipago/checkoutapi/js/maxipago.js</script>
            </action>
        </reference>
    </default>

    <checkout_onepage_index>
        <reference name="head">
            <action method="addJs">
                <script>maxipago/checkoutapi/js/maxipago.js</script>
            </action>
        </reference>
        <reference name="before_body_end">
        	<block type="checkoutapi/form_fraud" name="maxipago_fraud" template="maxipago/checkoutapi/form/fraud.phtml" />
        </reference>
    </checkout_onepage_index>

    <checkoutapi_standard_payment>
        <reference name="head">
            <action method="addCss">
                <stylesheet>maxipago/checkoutapi/css/styles.css</stylesheet>
            </action> 
        </reference>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="checkoutapi/payment" name="payment" template="maxipago/checkoutapi/payment.phtml" />
        </reference>
    </checkoutapi_standard_payment>
    
    <checkoutapi_standard_return>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate"><template>page/empty.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="checkoutapi/return" name="return" template="maxipago/checkoutapi/return.phtml" />
        </reference>
    </checkoutapi_standard_return>

    <checkoutapi_standard_log>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate"><template>page/empty.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="checkoutapi/log" name="log" template="maxipago/checkoutapi/log.phtml" />
        </reference>
    </checkoutapi_standard_log>
    
    <checkoutapi_standard_error>
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-right.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="checkoutapi/error" name="error" template="maxipago/checkoutapi/error.phtml" />
        </reference>
    </checkoutapi_standard_error>
    
    <checkoutapi_redepay_denied>
    	<reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="checkoutapi/redepay_denied" name="checkoutapi.redepay.denied"/>
        </reference>
    </checkoutapi_redepay_denied>
    
    <checkoutapi_redepay_error>
    	<reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="checkoutapi/redepay_error" name="checkoutapi.redepay.error"/>
        </reference>
    </checkoutapi_redepay_error>
    
    <checkoutapi_redepay_payment>
    	<reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="checkoutapi/redepay_payment" name="checkoutapi.redepay.payment"/>
        </reference>
    </checkoutapi_redepay_payment>
    
    <checkoutapi_redepay_pending>
    	<reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="checkoutapi/redepay_pending" name="checkoutapi.redepay.pending"/>
        </reference>
    </checkoutapi_redepay_pending>
    
    <checkoutapi_redepay_state>
    	<reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="checkoutapi/redepay_state" name="checkoutapi.redepay.state"/>
        </reference>
    </checkoutapi_redepay_state>
    
    <checkoutapi_redepay_success>
    	<reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="content">
            <block type="checkoutapi/redepay_success" name="checkoutapi.redepay.success"/>
        </reference>
    </checkoutapi_redepay_success>
</layout>
